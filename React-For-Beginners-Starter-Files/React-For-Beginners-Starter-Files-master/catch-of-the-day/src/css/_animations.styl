.order-enter
  background red
  transform: translateX(-120%) rotate(0)
  transition 0.5s
  max-height: 0
  padding: 0
  &.order-enter-active
    background yellow
    max-height 60px
    transform: translateX(0) rotate(1440deg)
    padding 2rem 0

.order-exit
  background thistle
  transition 0.5s
  transform: translateX(0)
  &.order-exit-active
    background palegolenrod
    transform: translateX(120%)
    padding 0

.count-enter
  background red
  transition 0.5s
  transform translateY(100%)
  &.count-enter-active
    background yellow
    transform translateY(0)

.count-exit
  background thistle
  transform translateY(0)
  transition 0.5s
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    background palegolenrod
    transform: translateY(-100%) 
    transition 0.5s